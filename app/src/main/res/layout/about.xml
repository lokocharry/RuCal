<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dip">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Apliación para calcular rutas más corta en la ciudad de Tunja"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/about_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:textSize="16sp"
        android:text="Jorge Lozano - Camilo Ochoa"
        android:autoLink="web"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:textSize="16sp"
        android:text="OSMDroid"
        android:autoLink="web"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/omsdroid"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:textSize="16sp"
        android:text="OSMDroid BonusPack"
        android:autoLink="web"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/osmbonuspack"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:textSize="16sp"
        android:text="BeyondAR"
        android:autoLink="web"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/beyondar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:textSize="16sp"
        android:text="Sliding Up Panel"
        android:autoLink="web"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/slidingup"/>

</LinearLayout>